# Admin Service Environment Variables
SERVICE_NAME=admin

# HTTP Server Configuration
HTTP_PORT=3001
HTTP_HOST=0.0.0.0

# gRPC Server Configuration
GRPC_PORT=50051
GRPC_HOST=0.0.0.0

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=password
DATABASE_NAME=jackpot_admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=admin:

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug

# Microservice Communication
METRICS_SERVICE_URL=localhost:50052
SCHEDULER_SERVICE_URL=localhost:50053
ENGINE_SERVICE_URL=localhost:50054
GATEWAY_SERVICE_URL=localhost:50055

# Security
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Health Check
HEALTH_CHECK_INTERVAL=30000
