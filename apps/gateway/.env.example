# Gateway Service Environment Variables
SERVICE_NAME=gateway

# HTTP Server Configuration
HTTP_PORT=3000
HTTP_HOST=0.0.0.0

# gRPC Server Configuration
GRPC_PORT=50055
GRPC_HOST=0.0.0.0

# API Configuration
API_PREFIX=/api
API_VERSION=v1
API_TIMEOUT=30000
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=15m

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=gateway:
REDIS_CACHE_TTL=300

# Logging
LOG_LEVEL=debug

# Microservice Communication
ADMIN_SERVICE_URL=localhost:50051
METRICS_SERVICE_URL=localhost:50052
SCHEDULER_SERVICE_URL=localhost:50053
ENGINE_SERVICE_URL=localhost:50054

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Health Check
HEALTH_CHECK_INTERVAL=30000
