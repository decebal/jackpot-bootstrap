# Engine Service Environment Variables
SERVICE_NAME=engine

# HTTP Server Configuration
HTTP_PORT=3004
HTTP_HOST=0.0.0.0

# gRPC Server Configuration
GRPC_PORT=50054
GRPC_HOST=0.0.0.0

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=password
DATABASE_NAME=jackpot_engine

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=engine:
REDIS_CACHE_TTL=300

# Engine Configuration
ENGINE_MAX_CONCURRENT_REQUESTS=10
ENGINE_DEFAULT_TIMEOUT=30000
ENGINE_MAX_REQUEST_SIZE=10485760 # 10MB
ENGINE_MAX_BATCH_SIZE=100

# Resource Limits
ENGINE_CPU_LIMIT=80 # percentage
ENGINE_MEMORY_LIMIT=1024 # MB
ENGINE_STORAGE_LIMIT=10240 # MB

# Feature Flags
FEATURE_BATCH_PROCESSING=true
FEATURE_ASYNC_PROCESSING=true
FEATURE_PRIORITY_QUEUE=true

# Logging
LOG_LEVEL=debug

# Microservice Communication
ADMIN_SERVICE_URL=localhost:50051
METRICS_SERVICE_URL=localhost:50052
SCHEDULER_SERVICE_URL=localhost:50053

# Health Check
HEALTH_CHECK_INTERVAL=30000
