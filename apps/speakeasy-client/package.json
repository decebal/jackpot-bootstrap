{
  "name": "jackpot-engine-sdk",
  "version": "0.1.0",
  "author": "Jackpot Team",
  "description": "gRPC SDK client for the Jackpot Engine service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "proto:generate": "protoc --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./src/generated --ts_proto_opt=esModuleInterop=true,outputServices=grpc-js,env=node -I=../../protos ../../protos/engine.proto",
    "build": "tsc",
    "build:full": "npm run proto:generate && tsc",
    "lint": "eslint --ext .ts src",
    "test": "jest",
    "prepublishOnly": "npm run build:full"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.0",
    "long": "^5.2.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@eslint/js": "^9.19.0",
    "eslint": "^8.35.0",
    "globals": "^15.14.0",
    "jest": "^29.5.0",
    "protoc": "^1.1.3",
    "ts-jest": "^29.1.0",
    "ts-proto": "^1.156.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.22.0",
    "zod": "^3.23.4"
  }
}
