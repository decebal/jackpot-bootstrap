{
  "name": "jackpot-bootstrap-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.0",
  "scripts": {
    "build": "turbo run build",
    "build:app": "turbo run build --filter=./apps/",
    "build:pkg": "turbo run build --filter=./packages/",
    "build:scope": "turbo run build --filter=",
    "dev": "turbo run dev",
    "dev:app": "turbo run dev --filter=./apps/",
    "dev:scope": "turbo run dev --filter=",
    "lint": "turbo run lint",
    "lint:app": "turbo run lint --filter=./apps/",
    "lint:pkg": "turbo run lint --filter=./packages/",
    "lint:scope": "turbo run lint --filter=",
    "test": "turbo run test",
    "test:app": "turbo run test --filter=./apps/",
    "test:pkg": "turbo run test --filter=./packages/",
    "test:scope": "turbo run test --filter=",
    "test:integration": "turbo run test:integration",
    "test:integration:app": "turbo run test:integration --filter=./apps/",
    "test:integration:scope": "turbo run test:integration --filter=",
    "test:watch": "turbo run test:watch",
    "test:watch:scope": "turbo run test:watch --filter=",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:app": "turbo run test:coverage --filter=./apps/",
    "test:coverage:pkg": "turbo run test:coverage --filter=./packages/",
    "test:coverage:scope": "turbo run test:coverage --filter=",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:app": "turbo run test:e2e --filter=./apps/",
    "test:e2e:scope": "turbo run test:e2e --filter=",
    "clean": "turbo run clean",
    "clean:app": "turbo run clean --filter=./apps/",
    "clean:pkg": "turbo run clean --filter=./packages/",
    "clean:scope": "turbo run clean --filter=",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "validate:env": "turbo run validate:env",
    "validate:env:root": "bun run scripts/validate-env.js root",
    "setup:deps": "bun run scripts/setup-dependencies.js",
    "generate:proto": "turbo run generate:proto",
    "generate:proto:scope": "turbo run generate:proto --filter="
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  }
}
