{
  "name": "jackpot-bootstrap-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "bun@1.2.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "validate:env": "turbo run validate:env",
    "validate:env:root": "bun run scripts/validate-env.js root",
    "setup:deps": "bun run scripts/setup-dependencies.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  }
}
